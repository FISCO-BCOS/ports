vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO HaoXuan40404/WeDPR-Lab-Crypto-1
    REF 70136d0824f96bf40b15e04369f74c1d098d7863
    SHA512 6a71686ebdc0032dbdd343312072904a3f63b0978035113c5f62b8e4cf6029c212c153b08216095e1802e3bce551349f4254a18e81c5204eb0f01015ba6fd972
